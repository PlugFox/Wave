<article class="{{post_class}} post-{{comment_id}}">
    <a class="loop-post-media-href" href="{{url}}">
        {{> post-media ratio="square"}}
    </a>
    <div class="blog-loop-post-spacer" style="width: 25px;"></div>
    <div class="post-wrapper">
        {{> post-header}}
        {{#if excerpt}}
            <div class="post-excerpt">
                {{excerpt words="25"}}
            </div>
        {{/if}}
        {{> post-footer}}
    </div>
</article>