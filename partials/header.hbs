<header class="site-header container">
    <div class="header-left">
        <a class="logo" href="{{@site.url}}">
            <span class="logo-text">{{@site.title}}</span>
        </a>
    </div>
    <div class="header-right">
        <a
            class="search"
            href="#/search"
            style="margin-right: 20px; font-size: 17px; opacity: .7;"
            data-ghost-search>
                <!--<span>Search&nbsp;</span>-->
                <div class="tooltip">
                    <i class="icon icon-search"></i>
                    <span class="tooltiptext">[ Cmd / Ctrl ] + [ K ]</span>
                </div>
        </a>

        <dark-mode-toggle
            id="theme-switch"
            legend="Theme Switcher"
            appearance="switch"
            permanent="true"
            style="margin-right: 20px; font-size: 17px; opacity: .7;">
        </dark-mode-toggle>

        {{#if @site.navigation}}
            <nav class="main-nav hidden-xs hidden-sm hidden-md">
                {{navigation}}
            </nav>
        {{/if}}

        {{!--
        <div class="header-subscribe">
            <button
                class="button header-button header-button-subscribe js-popup">Subscribe</button>
            {{> customize/subscribe-popup is_popup=true}}
        </div>
        --}}

        {{#if @site.navigation}}
            <div class="header-menu hidden-lg hidden-xl">
                <button
                    class="button button-secondary header-button header-button-menu js-popup">
                    <i class="icon icon-menu"></i>
                </button>
                <div class="popup">
                    <div class="mobile-menu">
                        {{> navigation}}
                    </div>
                </div>
            </div>
        {{/if}}
    </div>
</header>